@model Biblioteca.Models.Usuario

@{
    ViewData["Title"] = "Excluir Usuário";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card bg-black text-light shadow-lg">
                <div class="card-header text-center">
                    <h2 class="mb-0"><i class="bi bi-person-x"></i> Excluir Usuário</h2>
                </div>
                <div class="card-body">
                    <h5 class="text-danger text-center mb-4">
                        Tem certeza que deseja excluir este usuário?
                    </h5>
                    <div class="d-flex align-items-center justify-content-center mb-4">
                        @if (!string.IsNullOrEmpty(Model.UrlFoto))
                        {
                            <img src="@Url.Action("BuscarFoto", "Usuarios", new { id = Model.UsuarioId })"
                                 alt="Foto de perfil"
                                 class="rounded-circle border border-light me-3"
                                 style="width: 64px; height: 64px; object-fit: cover;" />
                        }
                        <span class="fs-4">@Model.NomeCompleto</span>
                    </div>
                    <dl class="row mb-4">
                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.CPF)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.CPF)</dd>
                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Celular)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Celular)</dd>
                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.DataNascimento)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.DataNascimento)</dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="UsuarioId" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-light">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash3"></i> Excluir
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
