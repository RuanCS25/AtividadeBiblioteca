@model Biblioteca.Models.Genero

@{
    ViewData["Title"] = "Excluir Gênero";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-black text-light shadow-lg">
                <div class="card-header text-center">
                    <h2 class="mb-0"><i class="bi bi-trash3"></i> Excluir Gênero</h2>
                </div>
                <div class="card-body">
                    <h5 class="text-danger text-center mb-4">
                        Tem certeza que deseja excluir este gênero?
                    </h5>
                    <dl class="row mb-4">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Nome)
                        </dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="GeneroId" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-light">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash3"></i> Excluir
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
