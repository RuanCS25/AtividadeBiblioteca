@model IEnumerable<Biblioteca.Models.Genero>

@{
    ViewData["Title"] = "Gêneros";
    string searchTerm = ViewBag.SearchTerm as string ?? "";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card bg-black text-light shadow-lg">
                <div class="card-header text-center">
                    <h2 class="mb-0"><i class="bi bi-book"></i> Gêneros Literários</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="get" class="mb-4">
                        <div class="input-group">
                            <input type="text" name="searchTerm" class="form-control" placeholder="Localizar gênero..." value="@searchTerm" />
                            <button type="submit" class="btn btn-outline-light">
                                <i class="bi bi-search"></i> Localizar
                            </button>
                        </div>
                    </form>
                    <table class="table table-dark table-striped table-hover rounded overflow-hidden">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                                <th class="text-end"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                    <td class="text-end">
                                        <a asp-action="Edit" asp-route-id="@item.GeneroId" class="btn btn-sm btn-outline-light me-2" title="Editar">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.GeneroId" class="btn btn-sm btn-outline-danger" title="Excluir">
                                            <i class="bi bi-trash3"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
